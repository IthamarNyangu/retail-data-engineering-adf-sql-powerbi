{
    "$schema": "http://schema.management.azure.com/schemas/2015-01-01/deploymentTemplate.json#",
    "contentVersion": "1.0.0.0",
    "parameters": {
        "factoryName": {
            "type": "string",
            "metadata": "Data Factory name",
            "defaultValue": "adf-retail-pipeline-ithamar"
        },
        "LS_AzureBlob_Retail_connectionString": {
            "type": "secureString",
            "metadata": "Secure string for 'connectionString' of 'LS_AzureBlob_Retail'"
        },
        "LS_SQLServer_RetailDB_password": {
            "type": "secureString",
            "metadata": "Secure string for 'password' of 'LS_SQLServer_RetailDB'"
        },
        "LS_SQLServer_RetailDB_properties_typeProperties_server": {
            "type": "string",
            "defaultValue": "localhost"
        },
        "LS_SQLServer_RetailDB_properties_typeProperties_database": {
            "type": "string",
            "defaultValue": "RetailDB"
        },
        "LS_SQLServer_RetailDB_properties_typeProperties_userName": {
            "type": "string",
            "defaultValue": "adf_user"
        },
        "containerUri": {
            "type": "string",
            "metadata": "URI to storage account containing linked ARM templates"
        },
        "containerSasToken": {
            "type": "string",
            "metadata": "Sas token to storage account containing linked ARM templates"
        }
    },
    "variables": {
        "factoryId": "[concat('Microsoft.DataFactory/factories/', parameters('factoryName'))]"
    },
    "resources": [
        {
            "name": "adf-retail-pipeline-ithamar_ArmTemplate_0",
            "type": "Microsoft.Resources/deployments",
            "apiVersion": "2024-03-01",
            "properties": {
                "mode": "incremental",
                "templateLink": {
                    "uri": "[concat(parameters('containerUri'), '/ArmTemplate_0.json', parameters('containerSasToken'))]",
                    "contentVersion": "1.0.0.0"
                },
                "parameters": {
                    "factoryName": {
                        "value": "[parameters('factoryName')]"
                    },
                    "LS_AzureBlob_Retail_connectionString": {
                        "value": "[parameters('LS_AzureBlob_Retail_connectionString')]"
                    },
                    "LS_SQLServer_RetailDB_password": {
                        "value": "[parameters('LS_SQLServer_RetailDB_password')]"
                    },
                    "LS_SQLServer_RetailDB_properties_typeProperties_server": {
                        "value": "[parameters('LS_SQLServer_RetailDB_properties_typeProperties_server')]"
                    },
                    "LS_SQLServer_RetailDB_properties_typeProperties_database": {
                        "value": "[parameters('LS_SQLServer_RetailDB_properties_typeProperties_database')]"
                    },
                    "LS_SQLServer_RetailDB_properties_typeProperties_userName": {
                        "value": "[parameters('LS_SQLServer_RetailDB_properties_typeProperties_userName')]"
                    }
                }
            },
            "dependsOn": []
        }
    ]
}